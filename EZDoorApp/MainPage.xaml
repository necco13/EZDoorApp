<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EZDoorApp.MainPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

                <Entry Placeholder="Username" x:Name="UsernameEntry" Text="" />
                <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" Text="" />
                <Button Text="Login" TextColor="Black" Clicked="OnLoginClicked" />
            <Button Text="Register" TextColor="White" BackgroundColor="Black" Clicked="RegisterClicked" />
                <Label Text="" x:Name="MessageLabel" TextColor="Red"/>
                

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
